    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Test tdmatch",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",  // 主程序路径
            "args": ["configs/test/tdmatch.yaml"],   // 参数列表
            "console": "integratedTerminal",         // 使用终端输出
            "justMyCode": false,                     // 如果想调试第三方库中的代码，可以设置为 false
            "cwd": "${workspaceFolder}"              // 当前工作目录为项目根目录
          },
          {
            "name": "Test hx",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",  // 主程序路径
            "args": ["configs/test/hx_pretrain.yaml"],   // 参数列表
            "console": "integratedTerminal",         // 使用终端输出
            "justMyCode": false,                     // 如果想调试第三方库中的代码，可以设置为 false
            "cwd": "${workspaceFolder}"              // 当前工作目录为项目根目录
          },
          {
            "name": "test pose_estimation",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/registration/evaluate_registration_c2f.py",
            "args": [
                "--source_path", "./snapshot/HX_ripoint_transformer_test/3DLoMatch",
                "--benchmark", "3DLoMatch",
                "--n_points", "10000"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"


          }
    ]
}